            if result.returncode == 0 and 'OpenComm' in result.stdout:
                logger.info("ğŸ” macOSã§OpenComm2ã®BluetoothçŠ¶æ…‹ã‚’ç¢ºèªä¸­...")
                
                # HFPãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«åˆ©ç”¨ã®ææ¡ˆ
                logger.info("ğŸ’¡ OpenComm2æœ€é©åŒ–ã®ãƒ’ãƒ³ãƒˆ:")
                logger.info("   1. macOSã€Œã‚·ã‚¹ãƒ†ãƒ è¨­å®šã€â†’ã€Œã‚µã‚¦ãƒ³ãƒ‰ã€â†’ã€Œå…¥åŠ›ã€ã§OpenComm2ã‚’é¸æŠ")
                logger.info("   2. é€šè©±å“è³ªå„ªå…ˆã®å ´åˆã¯HFPãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«ãŒè‡ªå‹•é¸æŠã•ã‚Œã¾ã™")
                logger.info("   3. éŸ³æ¥½å“è³ªå„ªå…ˆã®å ´åˆã¯A2DPãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«ï¼ˆå…¥åŠ›ä¸å¯ï¼‰ã«ãªã‚Šã¾ã™")
                
                return "HFP_SUGGESTED"
        except Exception as e:
            logger.debug(f"Bluetoothãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«ç¢ºèªã‚¨ãƒ©ãƒ¼: {e}")
            return None
        return None
        
    def audio_callback(self, indata, frames, time_info, status):
        """ã‚ªãƒ¼ãƒ‡ã‚£ã‚ªã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ (Bluetoothæœ€é©åŒ–ç‰ˆ)"""
        if status:
            logger.warning(f"ã‚ªãƒ¼ãƒ‡ã‚£ã‚ªã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹: {status}")
        now = time.time()
        
        # Bluetoothãƒ‡ãƒã‚¤ã‚¹ã®å ´åˆã€ãƒ‡ãƒ¼ã‚¿å“è³ªã‚’ãƒã‚§ãƒƒã‚¯
        if hasattr(self, '_bluetooth_config'):
            # å®Œå…¨ç„¡éŸ³ãƒ‡ãƒ¼ã‚¿ï¼ˆ-inf dBFSï¼‰ã®æ¤œå‡º
            try:
                import numpy as np
                rms = float(np.sqrt(np.mean((indata.astype(np.float32) / 32768.0) ** 2)))
                if rms > 1e-7:  # æœ‰åŠ¹ãªã‚ªãƒ¼ãƒ‡ã‚£ã‚ªãƒ‡ãƒ¼ã‚¿ã‚’æ¤œå‡º
                    if not hasattr(self, '_bt_first_audio_detected'):
                        self._bt_first_audio_detected = True
                        logger.info(f"ğŸ¤ {self._bluetooth_config}: åˆå›ã‚ªãƒ¼ãƒ‡ã‚£ã‚ªãƒ‡ãƒ¼ã‚¿æ¤œå‡º (RMS={rms:.6f})")
                elif hasattr(self, '_bt_first_audio_detected') and frames > 0:
                    # ç„¡éŸ³ã ãŒã€ãƒ•ãƒ¬ãƒ¼ãƒ ã¯å±Šã„ã¦ã„ã‚‹
                    pass
                else:
                    # å®Œå…¨ç„¡éŸ³ã‹ã¤åˆå›æ¤œå‡ºå‰: Bluetoothæ¥ç¶šã«å•é¡Œã®å¯èƒ½æ€§
                    if not hasattr(self, '_bt_silence_warning_shown'):
                        self._bt_silence_warning_shown = True
                        logger.warning(f"âš ï¸ Bluetoothãƒã‚¤ã‚¯ã‹ã‚‰ç„¡éŸ³ãƒ‡ãƒ¼ã‚¿ã®ã¿å—ä¿¡ä¸­ - ãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«ç¢ºèªãŒå¿…è¦ãªå ´åˆãŒã‚ã‚Šã¾ã™")
            except Exception as e:
                pass  # numpyè¨ˆç®—ã‚¨ãƒ©ãƒ¼ã¯ç„¡è¦–
        
        # å†ç”ŸéŸ³ãŒãƒã‚¤ã‚¯ã«å›ã‚Šè¾¼ã‚€ã®ã‚’æŠ‘åˆ¶ï¼ˆåŠäºŒé‡çš„ã«ç„¡è¦–ï¼‰
        if now < self._squelch_until:
            # å–ã‚Šè¾¼ã¾ãªã„ãŒã€æœ€å¾Œã®ãƒ•ãƒ¬ãƒ¼ãƒ æ™‚åˆ»ã¯æ›´æ–°
            self.last_frame_time = now
            return
        self.q.put(indata.copy())
        self.last_frame_time = time.time()

    def squelch(self, duration_sec: float):
        """æŒ‡å®šæ™‚é–“ã€å…¥åŠ›ãƒ•ãƒ¬ãƒ¼ãƒ ã‚’ç„¡è¦–ï¼ˆå†ç”ŸéŸ³ã®å›ã‚Šè¾¼ã¿å¯¾ç­–ï¼‰"""
        self._squelch_until = max(self._squelch_until, time.time() + max(0.0, duration_sec))
        
    def start_stream(self):
        """ã‚ªãƒ¼ãƒ‡ã‚£ã‚ªã‚¹ãƒˆãƒªãƒ¼ãƒ é–‹å§‹ (t-wada style robust implementation)"""
        if self.stream is None:
            device_id = self._find_available_input_device()
            if device_id is None:
                logger.error("åˆ©ç”¨å¯èƒ½ãªå…¥åŠ›ãƒ‡ãƒã‚¤ã‚¹ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã€‚")
                raise RuntimeError("åˆ©ç”¨å¯èƒ½ãªå…¥åŠ›ãƒ‡ãƒã‚¤ã‚¹ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã€‚ãƒã‚¤ã‚¯ã‚’æ¥ç¶šã—ã¦ãã ã•ã„ã€‚")
                
            # Bluetoothãƒ‡ãƒã‚¤ã‚¹ã«æœ€é©åŒ–ã•ã‚ŒãŸè¨­å®šã§è©¦è¡Œ
            device_info = sd.query_devices(device_id)
            device_name = device_info['name']
            is_bluetooth = any(bt in device_name.lower() for bt in ['shokz', 'opencomm', 'bluetooth', 'airpods', 'headset'])
            
            # Bluetoothãƒ‡ãƒã‚¤ã‚¹ç”¨ã®æœ€é©åŒ–è¨­å®š
            if is_bluetooth:
                logger.info(f"ğŸ§ Bluetoothãƒ‡ãƒã‚¤ã‚¹æ¤œå‡º: {device_name} - ãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«æœ€é©åŒ–ã‚’å®Ÿè¡Œ")
                
                # OpenComm2å°‚ç”¨ã®è©³ç´°è¨­å®š
                is_opencomm = 'opencomm' in device_name.lower()
                
                # macOSã§ã®Bluetoothãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«çŠ¶æ…‹ç¢ºèª
                if is_opencomm:
                    self._check_bluetooth_profile_macos(device_name)
                
                # Bluetoothãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«ã«å¿œã˜ãŸè¨­å®šå€™è£œã‚’ç”Ÿæˆ
                bt_configs = []
                
                if is_opencomm:
                    # OpenComm2å°‚ç”¨: HFPãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«ç”¨è¨­å®š
                    bt_configs.extend([
                        {
                            "name": "OpenComm2 HFP Profile",
                            "samplerate": 8000,  # HFPæ¨™æº–
                            "blocksize": 160,    # 20ms @ 8kHz
                            "latency": 0.05,     # HFPç”¨é«˜ã‚ãƒ¬ã‚¤ãƒ†ãƒ³ã‚·
                            "channels": 1        # ãƒ¢ãƒãƒ©ãƒ«
                        },
                        {
                            "name": "OpenComm2 HSP Profile",
                            "samplerate": 16000, # HSPæ”¹è‰¯ç‰ˆ
                            "blocksize": 320,    # 20ms @ 16kHz
                            "latency": 0.04,
                            "channels": 1
                        }
                    ])
                
                # æ±ç”¨Bluetoothè¨­å®š
                bt_configs.extend([
                    {
                        "name": "Generic Bluetooth",
                        "samplerate": int(device_info.get('default_samplerate', 16000)),
                        "blocksize": max(256, int(device_info.get('default_samplerate', 16000) * 0.02)),
                        "latency": device_info.get('default_low_input_latency', 0.02),
                        "channels": audio_config.CHANNELS
                    }
                ])
                
                # å„è¨­å®šã‚’é †æ¬¡è©¦è¡Œ
                stream_created = False
                for config in bt_configs:
                    logger.info(f"   è©¦è¡Œ: {config['name']} - SR={config['samplerate']}Hz, CH={config['channels']}")
                    
                    try:
                        self.stream = sd.InputStream(
                            channels=config['channels'],
