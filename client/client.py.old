def _dbfs(pcm: np.ndarray) -> float:
    """ç°¡æ˜“dBFSè¨ˆç®— (int16æƒ³å®š)"""
    if pcm.size == 0:
        return float("-inf")
    # 16-bit full scale
    rms = np.sqrt(np.mean((pcm.astype(np.float32) / 32768.0) ** 2))
    if rms <= 1e-8:
        return float("-inf")
    return 20.0 * np.log10(rms)

