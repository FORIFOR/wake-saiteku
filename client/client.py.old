    def get_audio_frame(self, timeout: Optional[float] = None) -> Optional[np.ndarray]:
        """ã‚ªãƒ¼ãƒ‡ã‚£ã‚ªãƒ•ãƒ¬ãƒ¼ãƒ ã‚’å–å¾—"""
