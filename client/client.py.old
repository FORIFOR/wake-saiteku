    def _check_bluetooth_profile_macos(self, device_name: str):
        """macOSã§Bluetoothãƒ—ãƒ­ãƒ•ã‚¡ã‚¤ãƒ«çŠ¶æ…‹ã‚’ãƒã‚§ãƒƒã‚¯"""
        try:
