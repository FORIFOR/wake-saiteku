                        time.sleep(attempt["delay"])
                    
                    self.stream.start()
                    logger.info(f"âœ… ã‚¹ãƒˆãƒªãƒ¼ãƒ é–‹å§‹æˆåŠŸ ({attempt['description']})")
                    break
                except Exception as e:
                    logger.warning(f"âš ï¸ {attempt['description']}å¤±æ•—: {e}")
                    if attempt == start_attempts[-1]:  # æœ€å¾Œã®è©¦è¡Œã®å ´åˆ
                        logger.error(f"âŒ å…¨ã¦ã®èµ·å‹•æ–¹æ³•ãŒå¤±æ•—ã€‚ãƒ‡ãƒã‚¤ã‚¹ {device_id}")
                        self.stream = None
                        raise RuntimeError(f"ã‚ªãƒ¼ãƒ‡ã‚£ã‚ªã‚¹ãƒˆãƒªãƒ¼ãƒ é–‹å§‹ã«å¤±æ•—ã—ã¾ã—ãŸã€‚ãƒ‡ãƒã‚¤ã‚¹ {device_id}: {e}")
            # ãƒ‡ãƒã‚¤ã‚¹æƒ…å ±ã‚’è¨˜éŒ²
            try:
                in_dev = None
                if audio_config.INPUT_DEVICE is not None:
                    in_dev = sd.query_devices(audio_config.INPUT_DEVICE)
